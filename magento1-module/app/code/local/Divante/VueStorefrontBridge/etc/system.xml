<?xml version="1.0"?>
<config>
    <sections>
        <vsbridge translate="label" module="oauth">
            <label>VueStorefront Bridge</label>
            <tab>service</tab>
            <frontend_type>text</frontend_type>
            <sort_order>400</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <jwt_secret translate="label">
                            <label>JWT Secret</label>
                            <frontend_type>text</frontend_type>
                            <comment>JSON Web Token secret for VueStorefront Bridge</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </jwt_secret>
                        <max_page_size translate="label">
                            <label>Maximum Page Size</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </max_page_size>
                        <error_admin_email_recipient translate="label">
                            <label>Order Failure Notification Email (admin)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </error_admin_email_recipient>
                        <error_admin_email_template translate="label">
                            <label>Order Failure Notification Email Template (admin)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </error_admin_email_template>
                        <customer_email_template translate="label">
                            <label>Order Failure Notification Email Template (customer)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_email_template</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                       </customer_email_template>
                    </fields>
                </general>
            </groups>
        </vsbridge>
    </sections>
</config>